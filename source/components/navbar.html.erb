</section>

<section>
  <h3>With Forms</h3>
  <div id="navbar-form"></div>
  <script>
      new jB.Navbar({
          appendTo: '#navbar-form'
          ,brand: 'Title'
          ,items: [
              {
                  xtype: 'navbar.nav'
                  ,items: [
                      {
                          text: 'Item 1'
                      },{
                          text: 'Item 2'
                      }
                  ]
              },{
                  xtype: 'container'
                  ,tag: 'form'
                  ,cls: 'navbar-search pull-right'
                  ,items: [
                      {
                          tag: 'input'
                          ,cls: 'search-query'
                          ,attr: {
                              type: 'text'
                              ,placeHolder: 'Search'
                          }
                      }
                  ]
              }
          ]
      })
  </script>
  <br>
