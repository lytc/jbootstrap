<section>
  <h3>The Basic Instance</h3>
  <div id="navbar"></div>
  <script>
    new jB.Navbar({
        appendTo: '#navbar'
        ,brand: 'Title'
        ,nav: [
            {
                text: 'Item 1'
                ,menu: [
                    {
                        text: 'Item 11'
                    },{
                        text: 'Item 12'
                    }
                ]
            },'-',{
                text: 'Item 2'
                ,href: 'http://google.com'
            },{
                text: 'Item 3'
            }
        ]
    })
  </script>
  <br>
