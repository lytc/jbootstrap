                ,attr: {
                type: 'text'
                ,placeHolder: 'Username'
            }
            },{
                tag: 'input'
                ,cls: 'input-block-level'
                ,attr: {
                    type: 'password'
                    ,placeHolder: 'Password'
                }
            },{
                xtype: 'button'
                ,text: 'Login'
                ,css: {
                    marginRight: 10
                }
            },{
                xtype: 'button'
                ,text: 'Close'
                ,click: function() {
                    popover.hide()
                    return false
                }
            }
        ]
    })
