      $.each(['top', 'right', 'bottom', 'left'], function(index, placement) {
          new jB.Popover({
              target: '#popover-' + placement
              ,title: 'Popover on ' + placement
              ,body: 'Vivamus sagittis lacus vel augue laoreet rutrum faucibus.'
              ,placement: placement
          })
      })
  </script>
