<section>
  <h3>Popover Events</h3>
  <div class="row">
    <div class="span4">
      <button class="btn" id="popover-event">Popover event</button>
    </div>
    <div class="span5">
      <div class="well well-small" style="font-size: 10px; max-height: 100px; overflow: auto">
        <h4>Event Logs</h4>
        <ul id="popover-event-log" class="inline"></ul>
      </div>
    </div>
  </div>
  <script>
      new jB.Popover({
          target: '#popover-event'
          ,title: 'Popover'
          ,body: 'Vivamus sagittis lacus vel augue laoreet rutrum faucibus.'
          ,listeners: {
              show: function() {
                  $('#popover-event-log').append('<li>show</li>')
              }
              ,hide: function() {
                  $('#popover-event-log').append('<li>hide</li>')
              }
              ,toggle: function() {
                  $('#popover-event-log').append('<li>toggle</li>')
              }
          }
      })
  </script>
