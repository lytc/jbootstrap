    ,striped: true
    ,animated: true
})

var btnHandle = new jB.Button({
    appendTo: '#btn-handle'
    ,text: 'Run'
    ,click: function() {
        this.disable()
        progress.play(function() {
            btnHandle.enable()
        })
    }
})
