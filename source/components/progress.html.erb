<section>
  <h3>Run Progress</h3>
  <div id="run-progress"></div>
  <div id="btn"></div>
  <script>
      var progress = new jB.Progress({
          appendTo: '#run-progress'
          ,striped: true
      })
      var btnPlayHandle = new jB.Button({
          appendTo: '#btn'
          ,text: 'Run'
          ,click: function() {
              jB(this).disable()
              btnStopHandle.enable()
              progress.play(function() {
                  btnPlayHandle.enable()
                  btnStopHandle.disable()
              })
          }
      })
      var btnStopHandle = new jB.Button({
          appendTo: '#btn'
          ,text: 'Stop'
          ,disabled: true
          ,click: function() {
              jB(this).disable()
              progress.stop()
              btnPlayHandle.enable()
          }
      })
  </script>
  <br>
<pre class="prettyprint linenums">
new jB.Progress({
