<section>
  <h3>Tooltip Events</h3>
  <div class="row">
    <div class="span4">
      <a href="#" id="tooltip-event">Tooltip event</a>
    </div>
    <div class="span5">
      <div class="well well-small" style="font-size: 10px; max-height: 100px; overflow: auto">
        <h4>Event Logs</h4>
        <ul id="tooltip-event-log" class="inline"></ul>
      </div>
    </div>
  </div>
  <script>
    new jB.Tooltip({
        target: '#tooltip-event'
        ,text: 'Tooltip event'
        ,listeners: {
            show: function() {
                $('#tooltip-event-log').append('<li>show</li>')
            }
            ,hide: function() {
                $('#tooltip-event-log').append('<li>hide</li>')
            }
            ,toggle: function() {
                $('#tooltip-event-log').append('<li>toggle</li>')
            }
        }
    })
  </script>
  <br>
<pre class="prettyprint linenums">
new jB.Tooltip({
    target: '#tooltip-event'
    ,text: 'Tooltip event'
    ,listeners: {
        show: function() {
            $('#tooltip-event-log').append('&lt;li&gt;show&lt;/li&gt;')
        }
        ,hide: function() {
            $('#tooltip-event-log').append('&lt;li&gt;hide&lt;/li&gt;')
        }
        ,toggle: function() {
            $('#tooltip-event-log').append('&lt;li&gt;toggle&lt;/li&gt;')
        }
    }
})
</pre>
</section>