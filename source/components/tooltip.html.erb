<section>
  <h3>Tooltip Directions</h3>
  <a href="#" id="tooltip-top" style="margin-right: 20px">Tooltip on top</a>
  <a href="#" id="tooltip-right" style="margin-right: 20px">Tooltip right</a>
  <a href="#" id="tooltip-bottom" style="margin-right: 20px">Tooltip bottom</a>
  <a href="#" id="tooltip-left" style="margin-right: 20px">Tooltip left</a>
  <script>
      $.each(['top', 'right', 'bottom', 'left'], function(index, placement) {
          new jB.Tooltip({
              target: '#tooltip-' + placement
              ,text: 'Tooltip on ' + placement
              ,placement: placement
          })
      })
  </script>
  <br>
<pre class="prettyprint linenums">
new jB.Tooltip({
    target: '#tooltip'
    ,text: 'Tooltip'
    ,placement: 'right' // top, right, bottom, left
})
</pre>
</section>

<section>
  <h3>Triggered Events</h3>
  <a href="#" id="tooltip-click" style="margin-right: 20px">Click me</a>
  <input type="text" id="tooltip-focus" placeholder="Focus me">
  <script>
      new jB.Tooltip({
          target: '#tooltip-click'
          ,text: 'Tooltip'
          ,triggerType: 'click' // hover, click, focus
      })

      new jB.Tooltip({
          target: '#tooltip-focus'
          ,text: 'Tooltip'
          ,triggerType: 'focus'
      })
  </script>
  <br>
<pre class="prettyprint linenums">
new jB.Tooltip({
    target: '#tooltip-click'
    ,text: 'Tooltip'
    ,triggerType: 'click' // hover, click, focus
})

new jB.Tooltip({
    target: '#tooltip-focus'
    ,text: 'Tooltip'
    ,triggerType: 'focus'
})
</pre>
</section>

<section>
  <h3>Tooltip Types</h3>
  <a href="#" id="tooltip-primary" style="margin-right: 20px">Tooltip primary</a>
