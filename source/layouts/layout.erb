<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  <title><%= data.page.title || "jBootstrap" %></title>
  <style>
      body {
          padding-top: 40px;
      }
  </style>
  <link href="//cdnjs.cloudflare.com/ajax/libs/codemirror/3.12.0/codemirror.min.css" rel="stylesheet">
  <script src="//cdnjs.cloudflare.com/ajax/libs/codemirror/3.12.0/codemirror.min.js"></script>

  <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
  <link href="//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.min.css" rel="stylesheet">
  <%= stylesheet_link_tag "base" %>
  <%= yield_content :assets_css %>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js"></script>
  <script>
    jQuery.noConflict()
  </script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js"></script>

  <script src="//cdnjs.cloudflare.com/ajax/libs/codemirror/2.36.0/javascript.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/backbone.js/1.0.0/backbone-min.js"></script>

  <%= javascript_include_tag "jB-all", "base" %>
  <%= yield_content :assets_js %>
</head>

<body>
<div id="main-navbar"></div>
<% if content_for? :header %>
    <div id="header">
      <div class="container">
        <%= yield_content :header %>
      </div>
    </div>
<% end %>
<div id="body" class="container">
  <%= yield %>
</div>
<footer id="footer">
  <div class="container">
    <p>Designed and built with all the love in the world by @mdo and @fat. </p>
    <p>Code licensed under Apache License v2.0, documentation under CC BY 3.0.</p>
    <p>Glyphicons Free licensed under CC BY 3.0.</p>
    <p>Blog · Issues · Changelog</p>
  </div>
</footer>
</body>
</html>